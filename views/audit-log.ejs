<!DOCTYPE html>
<html lang="en">
<%- include('partials/_head.ejs') %>
<body>
<%- include('partials/_header.ejs') %>
<main role="main" class="container mt-5">
    <h2>Audit Log</h2>
    <p>Here is a record of important actions that have occurred in your organization.</p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Timestamp</th>
                <th>User</th>
                <th>Action</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            <% logs.forEach(log => { %>
                <tr>
                    <td><%= new Date(log.timestamp).toLocaleString() %></td>
                    <td><%= log.user ? log.user.username : 'N/A' %></td>
                    <td><%= log.action %></td>
                    <td>
                        <% if (log.details && log.details.size > 0) { %>
                            <ul>
                                <% log.details.forEach((value, key) => { %>
                                    <li><strong><%= key %>:</strong> <%= value %></li>
                                <% }); %>
                            </ul>
                        <% } %>
                    </td>
                </tr>
            <% }); %>
            <% if (logs.length === 0) { %>
                <tr>
                    <td colspan="4" class="text-center">No audit log entries found.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</main>
<%- include('partials/_footer.ejs') %>
</body>
</html>
